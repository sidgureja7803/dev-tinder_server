# Backend Environment Variables for MergeMates
# Copy this file to .env and fill in your actual values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=7777
APP_NAME=MergeMates
APP_URL=http://localhost:7777

# ===========================================
# Database Configuration (MongoDB)
# ===========================================
# Local MongoDB
# DB_CONNECTION_SECRET=mongodb://localhost:27017/mergemates

# MongoDB Atlas (replace with your connection string)
DB_CONNECTION_SECRET=mongodb+srv://username:password@cluster.mongodb.net/mergemates?retryWrites=true&w=majority

# ===========================================
# Authentication & Security
# ===========================================
# Generate a strong random string for JWT token signing
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Cookie settings
COOKIE_SECRET=your_cookie_secret_here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# ===========================================
# Firebase Admin SDK Configuration
# ===========================================
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your_project_id.iam.gserviceaccount.com
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_TYPE=service_account

# ===========================================
# Email Configuration (Gmail SMTP)
# ===========================================
# Use Gmail with App Password (enable 2FA first)
EMAIL_USER=your.email@gmail.com
EMAIL_PASSWORD=your_16_character_app_password
EMAIL_FROM=team@mergemates.com
EMAIL_FROM_NAME=MergeMates Team

# Email service settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
# Get from Razorpay Dashboard > Settings > API Keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Webhook settings
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# AI Services (Novita AI)
# ===========================================
# Get from Novita AI Dashboard > API Keys
NOVITA_AI_API_KEY=your_novita_ai_api_key
NOVITA_AI_BASE_URL=https://api.novita.ai/v3/openai
NOVITA_AI_MODEL=meta-llama/llama-3.1-70b-instruct

# ===========================================
# AWS Configuration (for SES Email if used)
# ===========================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_SES_EMAIL=noreply@mergemates.com

# ===========================================
# CORS Configuration
# ===========================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,https://mergemates.com,https://www.mergemates.com

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=2592000000

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ===========================================
# Geolocation Services
# ===========================================
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# MAPBOX_ACCESS_TOKEN=your_mapbox_token

# ===========================================
# Analytics & Monitoring
# ===========================================
# SENTRY_DSN=your_sentry_dsn
# GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# ===========================================
# Social OAuth (if implementing)
# ===========================================
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
# GITHUB_CLIENT_ID=your_github_oauth_client_id
# GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# ===========================================
# Redis Configuration (if using)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# ===========================================
# Development Settings
# ===========================================
DEBUG=true
LOG_LEVEL=info
ENABLE_CORS=true
ENABLE_HELMET=true

# ===========================================
# Production Settings (uncomment for production)
# ===========================================
# NODE_ENV=production
# COOKIE_SECURE=true
# COOKIE_DOMAIN=mergemates.com
# DEBUG=false
# LOG_LEVEL=warn 